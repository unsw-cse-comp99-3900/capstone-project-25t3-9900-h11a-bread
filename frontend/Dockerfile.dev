# Development Dockerfile with hot reloading
FROM node:22-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Copy source code
COPY . .

# Expose port 3000
EXPOSE 3000

# Start development server with npm install
CMD ["sh", "-c", "npm install && npm run dev -- --host 0.0.0.0"]
